{
  "name": "api-node",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/infrastructure/server.js",
  "scripts": {
    "dev:server": "ts-node-dev --poll --respawn --transpile-only -r tsconfig-paths/register ./src/infrastructure/server.ts",
    "lint": "eslint ./src/**/*.ts --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "mocha -r ts-node/register/transpile-only -r tsconfig-paths/register ./src/test/**/*.spec.ts --timeout 10000 --exit",
    "test:functional": "mocha -r ts-node/register/transpile-only -r tsconfig-paths/register ./src/test/functional/*.spec.ts --timeout 10000 --exit",
    "test:unit": "mocha -r ts-node/register/transpile-only -r tsconfig-paths/register ./src/test/unit/{**,**/**}/*.spec.ts --recursive --exit",
    "test:functional:docker": "docker compose -f docker-compose.yml run backend npm run test:functional",
    "test:unit:docker": "docker compose -f docker-compose.yml run backend npm run test:unit",
    "coverage": "nyc npm run test",
    "coverage:docker": "docker compose -f docker-compose.yml run backend npm run coverage",
    "install:dep:docker": "docker compose run backend npm i",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:c": "typeorm migration:create",
    "migration:run:docker": "docker compose run backend npm run migration:run",
    "migration:run": "npm run typeorm migration:run -- -d ./src/infrastructure/AppDataSource.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/infrastructure/AppDataSource.ts",
    "migration:revert:docker": "docker compose run backend npm run migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/nodemailer": "^6.4.8",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-typescript-prettier": "^6.0.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/node": "^20.3.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "hal": "^1.2.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.4",
    "nodemailer": "^6.9.3",
    "randexp": "^0.5.3",
    "redis": "^4.6.6",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}