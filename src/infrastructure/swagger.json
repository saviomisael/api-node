          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "game id.",
            "type": "string",
            "example": "131db526-4599-4485-803d-cca8573693d5"
          }
        ],
        "responses": {
          "404": {
            "description": "Game not exists.",
